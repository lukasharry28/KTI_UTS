@model A07_UTS.ViewModel.ConfirmOTPModel
@{
    ViewData["Title"] = "Confirm OTP";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/_main.css" />
    <link rel="stylesheet" href="~/js/_main.js" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" />
</head>
<body>
<div class="login-container">
    <h3>Confirm OTP</h3>
    <form asp-action="ConfirmOTP" method="post">
        <div class="form-group">
            <label for="OTP">Enter the OTP:</label>
            <input asp-for="OTP" class="form-control" placeholder="OTP" required />
            <span asp-validation-for="OTP" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Username" value="@TempData["Username"]" />
        <button type="submit" class="btn btn-primary">Verify OTP</button>
    </form>
    <div>
        <a asp-controller="Account" asp-action="ForgotPassword">Resend OTP</a>
    </div>
</div>
</body>
</html>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}