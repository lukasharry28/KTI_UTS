@model A07_UTS.ViewModel.RegistrationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/_main.css" />
    <link rel="stylesheet" href="~/js/site.js" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" />

</head>
<body>
<div class="login-container">
    <div class="right-panel">
        <div class="login-card">
            <h2>Register</h2>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            }
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="Contact" class="form-control" placeholder="Contact" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="button-group mt-2">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button> 
                </div>
                @* <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-block">Back</a> *@
            </form>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}