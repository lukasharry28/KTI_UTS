@model A07_UTS.Models.Student
@{
    ViewData["Title"] = "Create Student";
}

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-2">
            <label asp-for="nim" class="col-md-2 control-label">NIM</label>
            <div class="col-md-6">
                <input asp-for="nim" class="form-control" />
                <span asp-validation-for="nim" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <label asp-for="name" class="col-md-2 control-label">Nama</label>
            <div class="col-md-6">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <label asp-for="usia" class="col-md-2 control-label">Usia</label>
            <div class="col-md-6">
                <input asp-for="usia" class="form-control" />
                <span asp-validation-for="usia" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary" value="Create" />
                <a asp-controller="Student" asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
            </div>
        </div>
    </div>
</form>